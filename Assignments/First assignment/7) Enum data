typedef enum logic[3:0] {
            ADD = 4'd2,
            SUB = 4'd3,
             JE = 4'd10,
            JNE = 4'd11,
             LD = 4'd12,
             ST = 4'd13 }opcode;

module enum_t;
  
  opcode op;
  
  initial begin
     op = ADD;
    $display("opcode = %0d(%s)",op,op.name());
     op = JE;
    $display("opcode = %0d(%s)",op,op.name());
     op = ST;
    $display("opcode = %0d(%s)",op,op.name());
     op = SUB;
    $display("opcode = %0d(%s)",op,op.name());
  end
endmodule
